{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": { // to solve "error  Expected linebreaks to be 'LF' but found 'CRLF'  linebreak-style"
    "linebreak-style": 0,
    "global-require": 0,
    "eslint linebreak-style": [0, "error", "windows"],
    "class-methods-use-this" : 0,
    "no-underscore-dangle": 0,
    "space-infix-ops": 0,
    "no-undef": 0
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  }
}
